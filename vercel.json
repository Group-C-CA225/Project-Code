{
    "functions": {
        "backend/**/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/index.php"
        }
    ],
    "env": {
        "DB_HOST": "ADD_YOUR_DB_HOST_HERE",
        "DB_NAME": "ADD_YOUR_DB_NAME_HERE",
        "DB_USERNAME": "ADD_YOUR_DB_USERNAME_HERE",
        "DB_PASSWORD": "ADD_YOUR_DB_PASSWORD_HERE"
    }
}